{
  "manifest_version": 3,
  "name": "Zoho People Überstunden Berechnung",
  "version": "0.11",
  "description": "Berechnet die tatsächlichen Überstunden in Zoho People",
  "author": "Markwart v. Bonin",
  "permissions": ["activeTab", "webNavigation"],
  "content_scripts": [
    {
      "matches": [
        "https://people.zoho.com/corekites/zp*",
        "https://people.ridecore.com/corekites/zp*",
        "https://people.zoho.com/corekites/zp#reports/*/attendance/user",
        "https://people.ridecore.com/corekites/zp#reports/*/attendance/user"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
